{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es7",
      "dom",
      "dom.iterable"
      ],
      "skipLibCheck": true, //Added to resolve "ERROR in node_modules/ngx-joyride/lib/joyride.module.d.ts:10:44 - error TS2314: Generic type 'ModuleWithProviders<T>' requires 1 type argument(s)."
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
